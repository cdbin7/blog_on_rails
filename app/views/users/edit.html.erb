<h1>Edit Profile</h1>
<div style="margin: 30px;">
  <%= form_with(model: @user) do |form| %>
    <div class="mb-3 form-group">
      <%=form.label :name, class: "form-label fs-5" %>
      <%=form.text_field :name, class: "form-control"%>
    </div>
    <div>
      <%=form.label :email, class: "form-label fs-5" %>
      <%=form.text_field :email, class: "form-control"%>
    </div>
    <br>
    <%= form.submit "Update", class: "btn btn-outline-primary"%>
    <%= link_to "Change Password", user_edit_password_path(@user) , class: "btn btn-outline-primary" %>

  <% end %>

</div>