<div class="newForm">
  <%= form_with(model: @post) do |form| %>
    <div class="mb-3 form-group">
      <%= form.label :title, class: "form-label fs-5"%>
      <%= form.text_field :title, class: "form-control"%>
    </div>
    <br>
    <div>
      <%= form.label :body, class: "form-label fs-5" %>
      <%= form.text_area :body, cols: 50, rows: 5, class: "form-control"%>
    </div>
    <br>
      <%= form.submit "Create Post", class: "btn btn-outline-primary"%>
  <% end %>
</div>
