<div class="indexPage">
  <% @posts.each do |post|%>
    <div class="card" style="width: 30rem; margin: 20px;">
      <div class="card-body">
          <h5 class="card-title">
          <%= link_to post.title, post_path(post.id)%>
          </h5>
          <h6 class="card-subtitle mb-2 text-muted">
          <%= post.body.truncate_words(10)%>
          </h6>
      </div>
    </div>
  <% end %>
</div>